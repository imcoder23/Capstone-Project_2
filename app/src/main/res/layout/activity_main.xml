<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.hunter.mybloodcall.MainActivity">

    <Button
        android:id="@+id/findDonor"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="124dp"
        android:layout_marginTop="104dp"
        android:background="@color/Red"
        android:onClick="findDonor"
        android:text="Find Blood Donor"
        android:textColor="@color/White"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="124dp" />

    <Button
        android:id="@+id/beDonor"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="124dp"
        android:layout_marginTop="228dp"
        android:background="@color/Red"
        android:onClick="beDonor"
        android:text="Be A Donor"
        android:textColor="@color/White"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="124dp" />

    <Button
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="124dp"
        android:layout_marginStart="124dp"
        android:layout_marginTop="84dp"
        android:text="Find All Donor"
        android:background="@color/Red"
        android:textColor="@color/White"
        android:onClick="MapsActivity"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/beDonor" />


</android.support.constraint.ConstraintLayout>
